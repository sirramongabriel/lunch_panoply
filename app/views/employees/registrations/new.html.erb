<div id="contact" class="section">
  <div class="fixed-wrapper"><h2>New Employee</h2></div>
  <div class="container">
    
    <div class="content">
     
      
      <%= form_for(resource, :as => resource_name, 
                             :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.text_field :first_name, placeholder: 'Your first name', autofocus: true %>
          <div class="clearfix"></div>
        </div>
        <div class="form-group">
          <%= f.text_field :last_name, placeholder: 'Your last name' %>
          <div class="clearfix"></div>
        </div>
        <div class="form-group">
          <%= f.email_field :email, placeholder: 'Your email address' %>
          <div class="clearfix"></div>
        </div>
        <div class="form-group">
          <%= f.password_field :password, placeholder: 'Create a password' %>
          <div class="clearfix"></div>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, placeholder: 'Please re-enter password' %>
          <div class="clearfix"></div>
        </div>

        <%= f.submit 'Register!', class='btn btn-lg'  %>      
      </form>
      
    </div>
    <br />
    
  </div>
</div><!-- /.container -->  

<%= render "Employee/shared/links" %>
