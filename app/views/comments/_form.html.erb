<div id="contact" class="section">
      <div class="fixed-wrapper"><h1>Comments</h1></div>
      <div class="container">
        
        <div class="content">
         
          <%= form_for @comment, html: { class: 'green_light' } do |f| %>
            <div class="form-group">
              <%= f.text_field :title, placeholder: 'Enter Title', class: 'form-control' %>
              <div class="clearfix"></div>
            </div>
            <div class="form-group">
              <%= f.text_area :content, placeholder: 'Enter Comment', class: 'form-control',
                              size: 5x5 %>
              <div class="clearfix"></div>
            </div>
          
            <%= f.submit 'Create Comment!', class: 'btn btn-large' %>
          <% end %>          
        </div>
        <br />
      </div>
    </div><!-- /.container -->    
